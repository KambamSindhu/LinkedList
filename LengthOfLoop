class Solution {
    public int lengthOfLoop(Node head) {
       
       Node slow=head;
       Node fast=head;
      int cnt=0;
       while(fast!=null && fast.next!=null)
       {
           slow=slow.next;
           fast=fast.next.next;
           if(slow==fast)
           {
              cnt=1;
               fast=fast.next;
              
               while(fast!=slow)
               {
                   fast=fast.next;
                   cnt++;
               }
               return cnt;
           }
       }
       return cnt;
    }
}
