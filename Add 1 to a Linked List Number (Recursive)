class Solution {
    public Node addOne(Node head) {
        int carry=helper(head);
        if(carry>0)
        {
            Node newNode=new Node(carry);
            newNode.next=head;
            return newNode;
        }
        return head;
    }
    public int helper(Node head)
    {
        if(head==null)
        {
            return 1;
        }
    int carry=helper(head.next);
    head.data=head.data+carry;
    if( head.data < 10)
    {
        return 0;
    }
    head.data=0;
    return carry;
    }
}
